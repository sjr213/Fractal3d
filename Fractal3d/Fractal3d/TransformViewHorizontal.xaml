<UserControl x:Class="Fractal3d.TransformViewHorizontal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fractal3d"
             xmlns:basicWpfLibrary="clr-namespace:BasicWpfLibrary;assembly=BasicWpfLibrary"
             d:DataContext="{d:DesignInstance Type=local:TransformVm2}"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="GeneralResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10, 2" Orientation="Vertical">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Translation" HorizontalAlignment="Center" />
            <StackPanel Margin="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource PlainTextBlockStyle}" Text="X"/>
                <TextBox Style="{StaticResource TextBoxInError}">
                    <TextBox.Text>
                        <Binding Path="TranslateX" 
                                     UpdateSourceTrigger="LostFocus" >
                            <Binding.ValidationRules>
                                <basicWpfLibrary:FloatRangeRule Min="{x:Static local:ParameterConstants.MinTranslation}" 
                                                                    Max="{x:Static local:ParameterConstants.MaxTranslation}"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource PlainTextBlockStyle}" Text="Y"/>
                <TextBox Style="{StaticResource TextBoxInError}">
                    <TextBox.Text>
                        <Binding Path="TranslateY" 
                                     UpdateSourceTrigger="LostFocus" >
                            <Binding.ValidationRules>
                                <basicWpfLibrary:FloatRangeRule Min="{x:Static local:ParameterConstants.MinTranslation}" 
                                                                    Max="{x:Static local:ParameterConstants.MaxTranslation}"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource PlainTextBlockStyle}" Text="Z"/>
                <TextBox Style="{StaticResource TextBoxInError}">
                    <TextBox.Text>
                        <Binding Path="TranslateZ" 
                                     UpdateSourceTrigger="LostFocus" >
                            <Binding.ValidationRules>
                                <basicWpfLibrary:FloatRangeRule Min="{x:Static local:ParameterConstants.MinTranslation}" 
                                                                    Max="{x:Static local:ParameterConstants.MaxTranslation}"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="10, 2" Orientation="Vertical" >
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Rotation (deg)" HorizontalAlignment="Center"/>
            <StackPanel Margin="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource PlainTextBlockStyle}" Text="X"/>
                <TextBox Style="{StaticResource TextBoxInError}">
                    <TextBox.Text>
                        <Binding Path="RotateX" 
                                     UpdateSourceTrigger="LostFocus" >
                            <Binding.ValidationRules>
                                <basicWpfLibrary:FloatRangeRule Min="{x:Static local:ParameterConstants.MinRotation}" 
                                                                    Max="{x:Static local:ParameterConstants.MaxRotation}"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource PlainTextBlockStyle}" Text="Y"/>
                <TextBox Style="{StaticResource TextBoxInError}">
                    <TextBox.Text>
                        <Binding Path="RotateY" 
                                     UpdateSourceTrigger="LostFocus" >
                            <Binding.ValidationRules>
                                <basicWpfLibrary:FloatRangeRule Min="{x:Static local:ParameterConstants.MinRotation}" 
                                                                    Max="{x:Static local:ParameterConstants.MaxRotation}"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource PlainTextBlockStyle}" Text="Z"/>
                <TextBox Style="{StaticResource TextBoxInError}">
                    <TextBox.Text>
                        <Binding Path="RotateZ" 
                                     UpdateSourceTrigger="LostFocus" >
                            <Binding.ValidationRules>
                                <basicWpfLibrary:FloatRangeRule Min="{x:Static local:ParameterConstants.MinRotation}" 
                                                                    Max="{x:Static local:ParameterConstants.MaxRotation}"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="2" Margin="10, 2" Orientation="Vertical">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Scale" HorizontalAlignment="Center"/>
            <StackPanel Margin="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource PlainTextBlockStyle}" Text="X"/>
                <TextBox Style="{StaticResource TextBoxInError}">
                    <TextBox.Text>
                        <Binding Path="ScaleX" 
                                     UpdateSourceTrigger="LostFocus" >
                            <Binding.ValidationRules>
                                <basicWpfLibrary:FloatRangeRule Min="{x:Static local:ParameterConstants.MinScale}" 
                                                                    Max="{x:Static local:ParameterConstants.MaxScale}"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource PlainTextBlockStyle}" Text="Y"/>
                <TextBox Style="{StaticResource TextBoxInError}">
                    <TextBox.Text>
                        <Binding Path="ScaleY" 
                                     UpdateSourceTrigger="LostFocus" >
                            <Binding.ValidationRules>
                                <basicWpfLibrary:FloatRangeRule Min="{x:Static local:ParameterConstants.MinScale}" 
                                                                    Max="{x:Static local:ParameterConstants.MaxScale}"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
            <StackPanel Margin="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource PlainTextBlockStyle}" Text="Z"/>
                <TextBox Style="{StaticResource TextBoxInError}">
                    <TextBox.Text>
                        <Binding Path="ScaleZ" 
                                     UpdateSourceTrigger="LostFocus" >
                            <Binding.ValidationRules>
                                <basicWpfLibrary:FloatRangeRule Min="{x:Static local:ParameterConstants.MinScale}" 
                                                                    Max="{x:Static local:ParameterConstants.MaxScale}"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
